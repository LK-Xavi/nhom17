@model Ecommerce.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Đăng Ký";
}
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4" >Đăng Ký</h1>
        <form asp-action="DangKy" enctype="multipart/form-data" >
            <div class="row">
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for="@Model.MaKh" class="form-label my-3">Mã Khách Hàng<sup>*</sup></label>
                        <input asp-for="@Model.MaKh" class="form-control">
                        <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for="@Model.MatKhau" class="form-label my-3">Mật Khẩu<sup>*</sup></label>
                        <input asp-for="@Model.MatKhau" class="form-control">
                        <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-item">
                    <label asp-for="@Model.HoTen" class="form-label my-3">Họ Và Tên<sup>*</sup></label>
                    <input asp-for="@Model.HoTen" class="form-control">
                    <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                </div>
                <div class="form-check my-3">
                    <input asp-for="@Model.GioiTinh" class="form-check-input">
                    <label class="form-check-label" for="GioiTinh">Nam?</label>
                </div>
                <div class="form-item">
                    <label asp-for="@Model.NgaySinh" class="form-label my-3">Ngày sinh<sup>*</sup></label>
                    <input asp-for="@Model.NgaySinh" class="form-control">
                    <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                </div>

                <div class="form-item">
                    <label asp-for="@Model.DiaChi" class="form-label my-3">Địa Chỉ<sup>*</sup></label>
                    <input asp-for="@Model.DiaChi" class="form-control">
                    <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                </div>

                <div class="form-item">
                    <label asp-for="@Model.DienThoai" class="form-label my-3">Số Điện Thoại<sup>*</sup></label>
                    <input asp-for="@Model.DienThoai" class="form-control">
                    <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                </div>

                <div class="form-item">
                    <label asp-for="@Model.Email" class="form-label my-3">Email<sup>*</sup></label>
                    <input asp-for="@Model.Email" class="form-control">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <label class="form-label my-3" for="Hinh">Hình<sup>*</sup></label>
                    <input type="file" name="Hinh" class="form-control">
                </div>
                <div class="text-center align-items-center justify-content-center pt-4">
                    <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng Ký</button>
                </div>
            </div>
        </form>
    </div>
</div>