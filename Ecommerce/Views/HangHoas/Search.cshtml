@model List<Ecommerce.Data.HangHoa>

@{
    ViewData["Title"] = "Search Results";
}

<h1>Search Results</h1>

@if (Model.Count == 0)
{
    <p>No products found.</p>
}
else
{
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <a asp-action="Details" asp-route-id="@item.MaHh">@item.TenHh</a>
            </li>
        }
    </ul>
}
